{
    "manifest_version": 3,
    "name": "Paywall Remover & Summarizer",
    "version": "1.3",
    "description": "Removes paywalls and summarizes webpage content using AI.",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["https://*/*", "http://*/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  